{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "ricorico",
    "type": "array",
    "items": {
        "anyOf": [
            { "$ref": "#/definitions/Categoria" },
            { "$ref": "#/definitions/Origen" },
            { "$ref": "#/definitions/Temporada" },
            { "$ref": "#/definitions/Preparacion" },
            { "$ref": "#/definitions/Ingrediente" },
            { "$ref": "#/definitions/Plato" },
            { "$ref": "#/definitions/Vino" },
            { "$ref": "#/definitions/Casual" }
        ]
    },
    "definitions": {
        "Categoria": {
            "type": "object",
            "properties": {
                "type": { "const": "Categoria" },
                "id": { "type": "string" }
            },
            "required": ["type", "id"],
            "additionalProperties": false
        },
        "Origen": {
            "type": "object",
            "properties": {
                "type": { "const": "Origen" },
                "id": { "type": "string" }
            },
            "required": ["type", "id"],
            "additionalProperties": false
        },
        "Temporada": {
            "type": "object",
            "properties": {
                "type": { "const": "Temporada" },
                "id": { "type": "string" }
            },
            "required": ["type", "id"],
            "additionalProperties": false
        },
        "Preparacion": {
            "type": "object",
            "properties": {
                "type": { "const": "Preparacion" },
                "id": { "type": "string" }
            },
            "required": ["type", "id"],
            "additionalProperties": false
        },
        "Ingrediente": {
            "type": "object",
            "properties": {
                "type": { "const": "Ingrediente" },
                "id": { "type": "string" },
                "glutenFree": { "type": "boolean" },
                "lactosaFree": { "type": "boolean" }
            },
            "required": ["type", "id", "glutenFree", "lactosaFree"],
            "additionalProperties": false
        },
        "Plato": {
            "type": "object",
            "properties": {
                "type": { "const": "Plato" },
                "id": { "type": "string" },
                "precio": { "type": "number" },
                "dificultad": { "type": "integer", "minimum": 0, "maximum": 10 },
                "idCategoria": { "type": "string" },
                "idPreparacion": { "type": "string"},
                "idOrigen": { "type": "string" },
                "idsIngredientes": { "type": "array", "items": { "type": "string" }, "minItems": 1 },
                "idsPlatosIncompatibles": { "type": "array", "items": { "type": "string" } },
                "idsBebidasIncompatibles": { "type": "array", "items": { "type": "string" } },
                "idsTemporadas": { "type": "array", "items": { "type": "string" } },
                "tipo": { "type": "integer" }
            },
            "required": ["type", "id", "precio", "dificultad", "idCategoria", "idPreparacion", "idOrigen", "idsIngredientes", "idsPlatosIncompatibles", "idsBebidasIncompatibles", "idsTemporadas", "tipo"],
            "additionalProperties": false
        },
        "Bebida": {
            "type": "object",
            "properties": {
                "type": { "const": "Bebida" },
                "id": { "type": "string" },
                "precio": { "type": "number" },
                "alcoholica": { "type": "boolean" },
                "glutenFree": { "type": "boolean" },
                "lactosaFree": { "type": "boolean" }
            },
            "required": ["type", "id", "precio", "alcoholica", "glutenFree", "lactosaFree"],
            "additionalProperties": false
        },
        "Vino": {
            "allOf": [
                { "$ref": "#/definitions/Bebida" },
                {
                    "type": "object",
                    "properties": {},
                    "required": [],
                    "additionalProperties": false
                }
            ]
        },
        "Casual": {
            "allOf": [
                { "$ref": "#/definitions/Bebida" },
                {
                    "type": "object",
                    "properties": {},
                    "required": [],
                    "additionalProperties": false
                }
            ]
        }
    }
}